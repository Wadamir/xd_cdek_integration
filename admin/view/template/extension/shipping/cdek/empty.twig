<div class="tab-pane" id="tab-empty">
	<div class="form-group">
		<label class="col-sm-2 control-label" for="">{{ entry_empty }}</label>
		<div class="col-sm-10 form-inline">
			<select class="form-control" id="cdek-empty" name="cdek_empty[use]">
				{% for key, variable in boolean_variables %}
					<option value="{{ key }}"{% if cdek_empty.use is defined and cdek_empty.use == key %} selected="selected"{% endif %}>{{ variable }}</option>
				{% endfor %}
			</select>
		</div>
	</div>

	{% set style_empty = cdek_empty.use is defined and cdek_empty.use == 0 ? 'style="display:none"' : '' %}
	<div id="cdek-empty_parameters" {{ style_empty }}>
		<div class="form-group">
			<label class="col-sm-2 control-label" for="">{{ entry_title }}</label>
			<div class="col-sm-10">
				{% for language in languages %}
					<div class="input-group">
						<span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
						<input class="form-control" type="text" name="cdek_empty[title][{{ language.language_id }}]" value="{% if cdek_empty.title[language.language_id] is defined %}{{ cdek_empty.title[language.language_id] }}{% endif %}" />
					</div>
				{% endfor %}
			</div>
		</div>

		<div class="form-group">
			<label class="col-sm-2 control-label" for=""><span data-toggle="tooltip" title="{{ entry_empty_cost_help }}">{{ entry_empty_cost }}</span></label>
			<div class="col-sm-10 form-inline">
				<input class="form-control" id="cdek-empty-cost" type="text" name="cdek_empty[cost]" value="{% if cdek_empty.cost is defined %}{{ cdek_empty.cost }}{% endif %}" />
				{% if error.cdek_empty.cost is defined %}
					<div class="text-danger">{{ error.cdek_empty.cost }}</div>
				{% endif %}
			</div>
		</div>
	</div>
</div>
