<div class="tab-pane" id="tab-package">
	<div class="form-group">
		<label class="col-sm-2 control-label" for="">{{ entry_packing_min_weight }}</label>
		<div class="col-sm-10 form-inline">
			<input class="form-control" id="cdek-packing-min-weight" type="text" name="cdek_packing_min_weight" value="{{ cdek_packing_min_weight }}" size="1" />
			<select class="form-control" name="cdek_packing_weight_class_id">
				{% for weight_class in weight_classes %}
					<option value="{{ weight_class.weight_class_id }}" {% if weight_class.weight_class_id == cdek_packing_weight_class_id %} selected="selected"{% endif %}>{{ weight_class.title }}</option>
				{% endfor %}
			</select>
			{% if error.cdek_packing_min_weight is defined %}
				<div class="text-danger">{{ error.cdek_packing_min_weight }}</div>
			{% endif %}
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label" for=""><span data-toggle="tooltip" title="{{ entry_packing_additional_weight_help }}">{{ entry_packing_additional_weight }}</span></label>
		<div class="col-sm-10 form-inline">
			<select class="form-control" name="cdek_packing_prefix">
				{% for prefix in ['+', '-'] %}
					<option {% if prefix == cdek_packing_prefix %} selected="selected"{% endif %} value="{{ prefix }}">{{ prefix }}</option>
				{% endfor %}
			</select>
			<input class="form-control" id="cdek-packing-value" type="text" name="cdek_packing_value" value="{{ cdek_packing_value }}" size="1" />
			<select class="form-control" name="cdek_packing_mode">
				{% for key, value in additional_weight_mode %}
					<option value="{{ key }}"{% if cdek_packing_mode == key %} selected="selected"{% endif %}>{{ value }}</option>
				{% endfor %}
			</select>
			{% if error.cdek_packing_value is defined %}
				<div class="text-danger">{{ error.cdek_packing_value }}</div>
			{% endif %}
		</div>
	</div>
</div>
